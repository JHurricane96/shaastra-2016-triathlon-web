<div class="spaced-rows">
	<div class="row">
		<div class="col-xs-pull-8">
			<div id="img-container" class="pull-left"></div>
		</div>
		<div class="row field clear-xs col-xs-8">
			<div class="col-xs-12 pad-top">
				<strong class="label-grdsht">Name:</strong> {{name}}
			</div>
		</div>
		<div class="row field col-xs-8">
			<div class="col-xs-12">
				<strong class="label-grdsht">Roll Number:</strong> {{rollNumber}}
			</div>
		</div>
		<div class="row field col-md-8 clear-sm">
			<div class="col-sm-6 field-md col-auto">
				<strong class="label-grdsht">Degree:</strong> {{degree}}
			</div>
			<div class="col-sm-6">
				<strong class="label-grdsht">Department:</strong> {{department}}
			</div>
		</div>
	</div>
	<div id="more-details">
		<div class="row clear">
			<div class="col-md-6 field">
				<strong class="label-grdsht">Date of Birth:</strong> {{dob}}
			</div>
			<div class="col-md-6 field">
				<strong class="label-grdsht">Batch:</strong> {{batch}}
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 field">
				<strong class="label-grdsht">Phone Number:</strong> {{phoneNumber}}
			</div>
			<div class="col-md-6 field">
				<strong class="label-grdsht">Email ID:</strong> {{emailId}}
			</div>
		</div>
	</div>
	<button id="btn-toggle-details" class="button"><span class="glyphicon glyphicon-chevron-down"></span> More</button>
</div>
<br />
<div id="grade-sheet" class="table">
	<div class="row hidden-sm hidden-xs">
		<div class="col-md-3 text-center">Course Code</div>
		<div class="col-md-5 text-center">Course Name</div>
		<div class="col-md-2 text-center">Credits</div>
		<div class="col-md-2 text-center">Grade</div>
	</div>
	{{#each gradeSheet}}
		<div class="row">
			<div class="col-md-3 col-xs-offset-1 col-md-offset-0 text-center-md">
				<span>{{courseCode}}</span>
			</div>
			<div class="col-md-5 col-xs-offset-1 col-md-offset-0 text-center-md">
				<span>{{courseName}}</span>
			</div>
			<div class="col-md-2 col-xs-offset-1 col-md-offset-0 text-center-md">
				<span class="hidden-md hidden-lg label-grdsht">Credits:</span><span>{{credits}}</span>
			</div>
			<div class="col-md-2 col-xs-6 col-xs-offset-1 col-md-offset-0 text-center-md">
				<span class="hidden-md hidden-lg label-grdsht">Grade:</span><span>{{grade}}</span>
			</div>
		</div>
	{{/each}}
</div>
<br />
<span class="pull-right pad-right">Total Credits: {{totCredits}}</span><br /><br />
<span id="cgpa" class="pull-right pad-right">CGPA: {{cgpa}}</span>